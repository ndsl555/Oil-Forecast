<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 背景圓圈 -->
    <item android:id="@android:id/background">
        <shape
            android:shape="ring"
            android:useLevel="false"
            android:thicknessRatio="20">
            <solid android:color="@android:color/darker_gray" />
        </shape>
    </item>

